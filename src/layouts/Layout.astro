---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-gray-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-full flex flex-col flex-1">
		<nav class="text-gray-500 flex text-lg flex-row justify-end w-full max-w-5xl mx-auto">
			<a class="hover:text-gray-800 ml-2 my-8" href="/">About</a>
			<a class="hover:text-gray-800 ml-2 my-8" href="/directory">Directory</a>
			<a class="hover:text-gray-800 ml-2 my-8" href="/posts">Posts</a>
		</nav>
		<slot />
		<footer class="text-gray-400 flex flex-row items-center justify-center">
			<p>Â© {new Date().getFullYear()} Kristaps Bumbulis</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		height: 100%;
	}
</style>
